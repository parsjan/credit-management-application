<%- include('./partials/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center"> Add Item</h2>
<form method="post" action="/access/customerlogin/item/<%=customerid%>">
    <div class="mb-3">
        <label for="itemname" class="form-label">Item Name</label>
        <input type="text" class="form-control" id="itemname" name="itemname" />
    </div>
    <div class="mb-3">
        <label for="itemquantity" class="form-label">Item Quantity</label>
        <input type="number" class="form-control" id="itemquantity" name="itemquantity" />
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" id="price" name="price" />
    </div>
    <div class="mb-3">
        <label for="note" class="form-label">Note</label>
        <input type="text" class="form-control" id="note" name="note" />
    </div>
    <button type="submit" class="btn btn-primary"> ADD </button>
</form>
       </div>
   </div>
</div>   
<div class="col-sm-6 mt-5" >
<table class="table table-striped table-hover">
    <thread>     
        <tr>
            <th scope="col">Item Name</th>
            <th scope="col">Item Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Note</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
   </thread>
   <tbody>
    <%for(i=0;i<key;i++){%>
        <tr>
            <td><%= result[0].itemname[indexes[i]] %></td>
            <td><%= result[0].itemquantity[indexes[i]] %></td>
            <td><%=  result[0].itemprice[indexes[i]] %></td>
            <td><%= result[0].note[indexes[i]] %></td>
            <td><%= result[0].date[indexes[i]] %></td>
            <td>
                <form action="/access/customerlogin/item/itemedit/<%=result[0].itemname[indexes[i]]%>/<%=customerid%>" method="get"  class="d-inline">
                    <button type=" submit"  class="btn"><i class="fas fa-pen-square text-info"></i></button>
                </form>
                <form action="/access/customerlogin/item/delete/<%=result[0].itemname[indexes[i]]%>/<%=customerid%>" method="post"  class="d-inline">
               <button type="submit"  class="btn"><i class="fas fa-trash text-danger"></i></button>
               </form>
            </td>
        </tr>
        <% }%>
</tbody>
</table>
<h4 class="alert alert-success text-center">total credit:  <%= totalcredit%></h4>

</div>
    <form method="get" action="/access/customerlogin/<%=customerid%>/<%=totalcredit%>">
        <button type="submit" class="btn btn-primary">ENTER</button>
    </form>
    <form method="get" action="/access/customerlogin">
        <button type="submit" class="btn btn-primary">BACK</button>
    </form>
<%- include('./partials/footer.ejs') %>